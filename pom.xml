    <properties>
        <pulsar-h2.version>1.4.196-SNAPSHOT</pulsar-h2.version>
        <pulsar.skip.assembly>true</pulsar.skip.assembly>

        <autolink.version>0.10.0</autolink.version>
    </properties>

</project>
